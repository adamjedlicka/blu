class Animal {
    fn __init(name) {
        this.name = name;
    }

    fn speak() {
        return this.name + " says: ";
    }
}

class Dog < Animal {
    fn __init(name, breed) {
        super(name);
        this.breed = breed;
    }

    fn speak() {
        return "bark!";
    }
}

class Cat < Animal {
    fn __init(name) {
        super(name);
        this.likesWater = false;
    }

    fn speak() {
        return super.speak() + "meow";
    }
}

var a = Animal("a");
var d = Dog("d", "XXX");
var c = Cat("c");

assert a.name == "a";
assert a.speak() == "a says: ";

assert d.name == "d";
assert d.breed == "XXX";
assert d.speak() == "bark!";

assert c.name == "c";
assert c.speak() == "c says: meow";
