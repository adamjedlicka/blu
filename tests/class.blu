class Person {

    fn __init(firstName, lastName) {
        @firstName = firstName
        @lastName = lastName
    }

    fn fullName() {
        return @firstName + " " + @lastName
    }

    fn setFirstName(firstName) {
        @firstName = firstName
    }

    fn setLastName(lastName) {
        @lastName = lastName
    }

}

var p1 = Person("Franta", "S치dlo")
var p2 = Person("Jirka", "M치slo")

assert p1 != p2

assert p1.firstName == "Franta"
assert p2.firstName == "Jirka"

assert p1.fullName() == "Franta S치dlo"
assert p2.fullName() == "Jirka M치slo"

p1.setFirstName("Pepa")
assert p1.firstName == "Pepa"
