class Person {
	fn __init(firstName, lastName) {
		@_firstName = firstName
		@_lastName = lastName
	}

	fn firstName() : @_firstName

	fn setFirstName(firstName) {
		if !firstName : return

		@_firstName = firstName
	}

	fn lastName() : @_lastName

	fn setLastName(lastName) {
		if !lastName : return

		@_lastName = lastName
	}

	fn toString() {
		return @_firstName + " " + @_lastName
	}
}


var p1 = Person("Franta", "S치dlo")
var p2 = Person("Jirka", "M치slo")

assert p1 != p2

p1.setFirstName("")
p2.setFirstName(nil)

assert p1.firstName() == "Franta"
assert p2.firstName() == "Jirka"

assert p1.toString() == "Franta S치dlo"
assert p2.toString() == "Jirka M치slo"

p1.setFirstName("Pepa")
assert p1.firstName() == "Pepa"
